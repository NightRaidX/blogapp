{% extends 'base.html.twig' %}

{% block title %}Blog index{% endblock %}

{% block body %}
    <h1>Blog index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Tekst</th>
                <th>Short</th>
                <th>Modified</th>
                <th>Image</th>
                <th>User</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for blog in blogs %}
            <tr>
                <td>{{ blog.id }}</td>
                <td>{{ blog.title }}</td>
                <td>{{ blog.tekstvak | raw}}</td>
                <td>{{ blog.short }}</td>
                <td>{{ blog.modified ? blog.modified|date('Y-m-d H:i:s') : '' }}</td>
                <td><img style=" width:300px !important;" src="{{ vich_uploader_asset(blog, 'imageFile') }}" alt="imageName"/></td>
                <td>{{ blog.user }}</td>
                <td>
                    <a href="{{ path('blog_show', {'id': blog.id}) }}">show</a>
                    <a href="{{ path('blog_edit', {'id': blog.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   <button style="margin-bottom: 40px;"> <a href="{{ path('blog_new') }}">Create new</a> </button>
{% endblock %}
